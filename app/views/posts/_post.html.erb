<div class="w-full lg:w-[calc(50%-1rem)] mb-3 lg:mr-3 bg-white p-4 rounded-lg shadow-md flex relative">
  <!-- サムネイル画像（左側） -->
  <div class="flex-shrink-0">
    <%= image_tag "post_placeholder.png", class: "rounded-md", style: "width: 300px; height: 200px;" %>

    <!-- 投稿者名と作成日時 -->
    <ul class="list-none mt-2">
      <li class="flex items-center text-sm">
        <!-- ユーザーアイコン -->
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
        </svg>
        <%= post.user.name %>
      </li>
      <li class="flex items-center text-sm">
        <!-- カレンダーアイコン -->
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 0 1 2.25-2.25h13.5A2.25 2.25 0 0 1 21 7.5v11.25m-18 0A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75m-18 0v-7.5A2.25 2.25 0 0 1 5.25 9h13.5A2.25 2.25 0 0 1 21 11.25v7.5" />
        </svg>
        <%= post.created_at.strftime('%Y/%m/%d %H:%M') %>
      </li>
    </ul>
  </div>

  <!-- 右側のコンテンツ（タイトル、本文、アイコン） -->
  <div class="ml-4 flex-grow h-[200px] bg-gray-100 overflow-hidden">
    <!-- タイトルとリンク（背景色：緑） -->
    <h4 class="card-title text-lg font-semibold bg-green-500 text-white p-2 rounded-md">
      <%= link_to post.title, '#' %>
    </h4>
    <!-- 本文（背景色：薄いグレー） -->
    <p class="card-text mt-2 p-2 rounded-md"><%= post.body %></p>
  </div>

  <!-- 編集・削除ボタン（本文の下、右寄せ） -->
  <div class="absolute bottom-5 right-4 flex space-x-2">
    <!-- 編集ボタン（鉛筆定規アイコン） -->
    <%= link_to '#', id: "button-edit-#{post.id}" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
        <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
      </svg>
    <% end %>
    <!-- 削除ボタン（ゴミ箱アイコン） -->
    <%= link_to '#', id: "button-delete-#{post.id}", method: :delete, data: { confirm: '' } do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
      </svg>
    <% end %>
  </div>
</div>
